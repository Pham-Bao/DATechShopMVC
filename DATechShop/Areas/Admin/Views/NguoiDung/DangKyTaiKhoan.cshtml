@model DATechShop.Models.NguoiDung

@{
    ViewBag.Title = "DangKyTaiKhoan";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section class=" container-fluid bg-light">
    <div class="container">
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h3>Đăng Ký</h3>
                    <div class="breadcrumb__links">
                        <a href="~/trangchu">Trang chủ</a>
                        <span>Đăng Ký</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@using (Html.BeginForm("DangKyTaiKhoan", "NguoiDung", FormMethod.Post, new { @class = "mt-5 container", style = "width: 1000px" }))
{
    @Html.AntiForgeryToken()

<div class="container mt-5">
    <div class="border rounded  p-4" style="max-width: 400px; margin: 0 auto;">
        <div class="d-flex align-items-center">
            <img src="~/img/icons8-circuit-50.png" alt="Icon" class="me-2" style="width: 40px; height: 40px;">
            <h3 class="">Đăng ký</h3>

        </div>
        <hr class="my-4">

            <div class="form-group">
                <label class="label">Họ tên</label>
                @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="label">Số điện thoại</label>
                <p class="text-danger">@ViewBag.phone</p>
                @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="label">Email</label>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="label">Mật khẩu</label>
                @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
            </div>

            <p class="col-md-10">Lưu ý: Mật khẩu tối thiểu 8 ký tự bao gồm chữ, số và các ký tự đặc biệt khác.</p>

            <div class="form-group">
                <label class="label">Xác nhận mật khẩu</label>
                <input id="mk" class="input form-control" type="password" placeholder="********" name="mk">

                <p class="text-danger">@ViewBag.Error</p>
                <p class="text-primary">@ViewBag.success</p>
            </div>


            <div class=" mx-2 mt-3">
                <button type="submit" class="btn btn-dark" style="width: 100%">Đăng Ký</button>
                <p class="mt-3">Bạn đã có tài khoản</p>
                <a href="~/Admin/nguoidung/DangNhap" class="text-primary">Đăng Nhập ngay.</a>
            </div>
        </div>
    </div>
    }

    <script src="~/Content/Teamplate/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/Teamplate/js/bootstrap.min.js"></script>
    <script src="~/Content/Teamplate/js/jquery.nice-select.min.js"></script>
    <script src="~/Content/Teamplate/js/jquery.nicescroll.min.js"></script>
    <script src="~/Content/Teamplate/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/Teamplate/js/jquery.countdown.min.js"></script>
    <script src="~/Content/Teamplate/js/jquery.slicknav.js"></script>
    <script src="~/Content/Teamplate/js/mixitup.min.js"></script>
    <script src="~/Content/Teamplate/js/owl.carousel.min.js"></script>
    <script src="~/Content/Teamplate/js/main.js"></script>
