
@{
    ViewBag.Title = "forgotPass";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<section class=" container-fluid bg-light">
    <div class="container">
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="breadcrumb__text">
                    <h3>Quên mật khẩu</h3>
                    <div class="breadcrumb__links">
                        <a href="~/trangchu">Trang chủ</a>
                        <a href="~/trangchu/dangky">Đăng Nhập</a>
                        <span>Quên mật khẩu</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-end mt-2">
                <a href="~/trangChu/home" class="btn btn-link text-danger">
                    <i class="fas fa-times fa-2x"></i>
                </a>
            </div>


        </div>
    </div>
</section>



<div class="container mt-5">
    <div class="border rounded  p-4" style="max-width: 400px; margin: 0 auto;">
        <div class="d-flex align-items-center">
            <img src="~/img/icons8-circuit-50.png" alt="Icon" class="me-2" style="width: 40px; height: 40px;">
            <h3 class="">Email</h3>
        </div>
        <hr class="my-3">
        @using (Html.BeginForm("resetPass", "NguoiDung", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

    <div class="form-group">
        <p class=" font-weight-bolder mb-1 text-danger">Nhập mật khẩu mới của bạn:</p>
        <p id="email" name="email">@ViewBag.EmailAddress</p>
        <div typeof="hidden">
            <label for="otpEntered" class="font-weight-bold">Mật khẩu:</label>
            <input type="password" class="form-control" id="mk1" name="mk1" required />
            <label for="otpEntered" class="font-weight-bold">Nhập lại mật khẩu:</label>
            <input type="password" class="form-control" id="mk2" name="mk2" required />
            <input type="hidden" id="emailAddress" name="emailAddress" value="@ViewBag.EmailAddress" />

        </div>
   
    </div>
            <div class="row">
                <div class="col-lg-6 d-flex justify-content-center">
                    <button class="btn btn-outline-secondary" style="width: 90%;">Quay lại</button>
                </div>
                <div class="col-lg-6 d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark" style="width: 90%">Xác nhận</button>
                </div>
                <div class="d-flex justify-content-center mb-4 mt-2">
                    <span class="font-weight-bolder">Chưa có tài khoản?</span>
                    <span class="font-weight-bolder text-danger">Đăng ký</span>
                </div>

            </div>

        }
    </div>
</div>




