
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-horizontal container" style="width: 100% ; height:800px ">
    <p class="h1">xuống</p>
    <div class="container mt-5 ">
        <div class="row mt-5">
            <div class="col">
                <img src="~/Areas/imgAdmin/VNU_M492_08 1.jpeg" alt="Logo" style="width:100%;" class="rounded-pill">
            </div>

            <div class="col">
                <p class="h4 mt-3">Đăng nhập</p>
                <form role="form" method="post">
                    <div class="field">
                        <label id="phoneNumber" class="label">Số điện thoại:</label>
                        <div class="control">
                            <input class="input" type="text" name="sdt">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Mật khẩu:</label>
                        <div class="control position-relative">
                            <input type="password" name="mk" id="password" class="form-control">
                            <i class="far fa-eye position-absolute top-50 translate-middle-y" id="togglePassword" style="cursor: pointer; right: 10px;"></i>
                        </div>
                    </div>





                    <div class="row ">
                        <div class="col-6 col-sm-4">
                            <label>
                                <input type="checkbox" name="agree" value="yes" checked> Nhớ mật khẩu
                            </label>

                        </div>
                        <div class="col-6 col-sm-4 ">
                            <a class="text-end" style="margin-right: 0px">Quên mật khẩu</a>
                        </div>

                    </div>

                    <div class="container mt-3">
                        <button id="btnDangKy" type="submit" class="button is-primary" style="width: 100%">Đăng Nhập</button>
                        <p class="">Bạn chưa có tài khoản?</p>
                        <a class="pe-auto" href="#">Tạo tài khoản ngay.</a>
                        <p class="text-danger">@ViewBag.Error</p>
                    </div>
                </form>
            </div>

            @{
                // Lấy giá trị của Session
                var tenNguoiDung = Session["TenNguoiDung"] as string;
                var soDienThoai = Session["SoDienThoai"] as string;
                var diaChi = Session["DiaChi"] as string;
                var id = Session["id_NguoiDung"];
               
            }

        <div>
            <p>Tên người dùng: @tenNguoiDung</p>
            <p>Số điện thoại: @soDienThoai</p>
            <p>Địa chỉ: @diaChi</p>
            <p>Id: @id</p>
        </div>

        </div>
    </div>

</div>



