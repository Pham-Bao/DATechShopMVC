<script>
    $(document).ready(function () {
        // Hàm gọi action TinhToan và cập nhật kết quả
        function updateStatistics() {
            var startDate = $('#startDate').val();
            var endDate = $('#endDate').val();

            $.ajax({
                url: '@Url.Action("TinhToan", "SanPham")',
                method: 'POST',
                data: {
                    startDate: startDate,
                    endDate: endDate,
                },
                success: function (response) {
                    // Cập nhật tổng số đơn trên giao diện
                    $('#totalOrders').text(response.TotalOrders);
                    // Cập nhật tổng tiền trên giao diện
                    $('#totalRevenue').text(formatCurrency(response.TotalRevenue));
                },

                error: function (xhr, status, error) {
                    console.log('Lỗi: ' + error);
                }
            });
        }

        $('#submitButton').click(function () {
            updateStatistics();
        });

        $('#startDate, #endDate').change(function () {
            updateStatistics();
        });

        updateStatistics();
    });

    function formatCurrency(amount) {
        // Sử dụng hàm toLocaleString() của JavaScript để định dạng số tiền
        // 'vi' là mã ngôn ngữ của tiếng Việt, 'VN' là mã quốc gia của Việt Nam
        return amount.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
    }
</script>