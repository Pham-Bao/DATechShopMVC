@model PagedList.IPagedList<DATechShop.Models.TuyChon>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DanhSachTuyChon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Danh sách tùy chọn</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
            <tr>
                <th>
                    Tên tùy chọn
                </th>
                <th>
                    Tùy Chọn
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tenTuyChon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tuyChon1)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id_tuyChon }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id_tuyChon }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id_tuyChon })
                    </td>
                </tr>
            }

        </table>

        <div class="container center">
            <div class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("DanhSachTuyChon", new { page }), PagedListRenderOptions.Classic)
            </div>
        </div>

    </div>
    </div>


 
