@model DATechShop.Models.MauSac

@{
    ViewBag.Title = "ThemMauSac";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }

    <div class="form-horizontal container " style="width:70%">
        <form action="" method="post" enctype="multipart/form-data">
            <h2 class="text-center">Thêm Màu Sắc</h2>
            <div class="row">
                <div class="col-6">
                    <div class="form-group mt-5">
                        <label> Bảng màu</label>
                        <div class="col-md-10">
                            <input type="color" id="inputColor" oninput="setColor()" />
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group mt-5">
                        <label>Tên Màu</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.tenMau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tenMau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Mã màu
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.maMau, new { htmlAttributes = new { @class = "form-control", @id = "maMauInput" } })
                            @Html.ValidationMessageFor(model => model.maMau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
               
            </div>
        </form>
    </div>
</body>

<script>
    function setColor() {
        // Lấy giá trị mã màu từ ô input type="color"
        var colorValue = document.getElementById("inputColor").value;

        // Gán giá trị mã màu vào ô maMau
        document.getElementById("maMauInput").value = colorValue;
    }
</script>
