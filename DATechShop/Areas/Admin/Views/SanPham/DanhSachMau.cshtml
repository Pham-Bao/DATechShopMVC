@model PagedList.IPagedList<DATechShop.Models.MauSac>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DanhSachMau";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Danh sách màu</h2>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="dataTable" width="90%" cellspacing="0">
            <thead>
                <tr>
                    <th colspan="7" class="text-end">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="h3 text-dark mb-0">Màu sắc</p>
                            <a class="btn btn-primary" href="@Url.Action("Themmausac")">
                                <i class="fas fa-plus"></i> Thêm màu
                            </a>
                        </div>
                    </th>

                </tr>
                <tr>
                    <th>ID</th>
                    <th>Tên Màu</th>
                    <th>Mã Màu</th>
                    <th>Mẫu Màu</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.id_Mau)</td>
                        <td>@Html.DisplayFor(modelItem => item.tenMau)</td>
                        <td>@Html.DisplayFor(modelItem => item.maMau)</td>
                        <td><div class="mauMau`" style="background-color: @item.maMau"></div></td>
                        <td>
                            <div class="d-inline mx-3">
                                <a href="#" class="btn btn-danger btn-circle btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                            <div class="dropdown d-inline">
                                <button class="btn " type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i> <!-- Icon ba chấm của Font Awesome -->
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>@Html.ActionLink("Thêm chi tiết sản phẩm", "ThemChiTietSP", new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Xem Các SP", "ChiTietSP",  new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Thêm Thông Số", "DanhSachThongSo", new { @class = "dropdown-item" })</li>
                                </ul>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="container center">
            <ul class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("DanhSachMau", new { page }), PagedListRenderOptions.Classic)
            </ul>
        </div>
    </div>
</div>


