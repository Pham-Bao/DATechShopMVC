<script>
    function setColor() {

        var colorValue = document.getElementById("inputColor").value;

        // Gán giá trị mã màu vào ô maMau
        document.getElementById("maMauInput").value = colorValue;
    }
    document.addEventListener("DOMContentLoaded", function () {
        // Tự động loại bỏ lớp 'fade-out' sau 5 giây
        setTimeout(function () {
            var errorAlert = document.getElementById('errorAlert');
            var successAlert = document.getElementById('successAlert');
            if (errorAlert) errorAlert.classList.add('fade-out');
            if (successAlert) successAlert.classList.add('fade-out');
        }, 2000); // 5 giây
    });
</script>

<style>
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }

    .alert {
        position: fixed; /* Định vị cố định */
        top: 80px; /* Cách lề trên 20px */
        right: 50px; /* Cách lề phải 20px */
        z-index: 1000; /* Sắp xếp z-index để đảm bảo nó hiển thị trên các phần tử khác */
        border-radius: 5px; /* Bo tròn góc */
    }
</style>