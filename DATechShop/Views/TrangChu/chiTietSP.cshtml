<script>
    var selectedButton = document.querySelector('.mt-3 button.btn-secondary');

    // Kiểm tra nếu không có nút được chọn, thì mặc định chọn nút đầu tiên
    if (!selectedButton) {
        selectedButton = document.querySelector('.mt-3 button');
        selectedButton.classList.remove('btn-outline-secondary');
        selectedButton.classList.add('btn-secondary');
    }

    function changeStyle(button, tab) {
        if (selectedButton !== null) {
            // Nếu có nút được chọn trước đó, đặt lại màu nền và chữ về trạng thái mặc định
            selectedButton.classList.remove('btn-secondary');
            selectedButton.classList.add('btn-outline-secondary');
        }

        // Thêm class màu xanh cho nút được bấm
        button.classList.remove('btn-outline-secondary');
        button.classList.add('btn-secondary');

        // Lưu trữ nút được bấm vào biến selectedButton để sử dụng sau này
        selectedButton = button;
    }
</script>
