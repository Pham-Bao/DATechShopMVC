@model PagedList.IPagedList<DATechShop.Models.KhuyenMai>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DanhSachKM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <p class="h4">Khuyến mãi</p>
                    <div class="breadcrumb__links">
                        <a href="~/trangchu">Trang chủ</a>
                        <span>khuyến mãi</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog spad">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {

                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic set-bg" data-setbg="@Url.Content("~/Upload/img/" + item.hinhAnh)"></div>
                            <div class="blog__item__text">
                                <span> <i class="far fa-calendar mx-2"></i>@item.ngayHet.Value.ToString("dd/MM/yyyy")</span>
                                <label class="label fs-3">@item.moTaKhuyenMai</label>
                                <h5 class="label fs-3">Mã: @item.tenMa</h5>
                                <a href="#">Read More</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Danh sách sản phẩm trống</p>
            }


        </div>
    </div>
</section>

<div class="container center">
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("DanhSachKM", new { page }), PagedListRenderOptions.Classic)
    </div>
</div>








