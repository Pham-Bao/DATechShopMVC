<style>
    /* Định dạng biểu tượng giỏ hàng và số lượng */
    #cart-icon {
        position: relative;
    }

    .cart-icon-wrapper {
        position: relative;
        display: inline-block;
    }

    #cart-count {
        position: absolute;
        top: 0;
        right: 0;
        background-color: red; /* Màu nền của số lượng */
        color: white; /* Màu chữ của số lượng */
        border-radius: 50%; /* Bo tròn cho số lượng */
        padding: 4px 8px; /* Kích thước và độ lệch cho số lượng */
        font-size: 10px; /* Kích thước chữ của số lượng */
    }
</style>
<script>
    // Lấy giỏ hàng từ local storage
    var cart = JSON.parse(localStorage.getItem('cart')) || [];

    // Đếm số lượng mục trong giỏ hàng
    var cartCount = cart.length;

    // Cập nhật số lượng hiển thị trên biểu tượng giỏ hàng
    $('#cart-count').text(cartCount);

</script>

